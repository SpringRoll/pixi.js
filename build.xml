<?xml version="1.0"?>
<project name="pixi.js" default="build" basedir="./">
	<target name="build" description="Compile with grunt">
		<exec osfamily="mac" executable="grunt" failonerror="true">
			<arg line="build" />
		</exec>
		<exec osfamily="windows" executable="cmd.exe" failonerror="true">
			<arg line="/c" />
			<arg line="grunt" />
			<arg line="build" />
		</exec>
	</target>
	
	<target name="doc" description="Generate docs with grunt">
		<exec executable="grunt" failonerror="true">
			<arg line="docs" />
		</exec>
	</target>
</project>